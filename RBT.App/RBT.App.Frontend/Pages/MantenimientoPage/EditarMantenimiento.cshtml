@page
@model RBT.App.Frontend.Pages.MantenimientoPage.EditarMantenimiento
@{
    ViewData["Title"] = "EditarMantenimiento";
}

<h1>@ViewData["Title"]</h1>


<form method="post">
    <input type="hidden" asp-for="EditMant.Id">
    
    <div class="form-group">
        <label asp-for="EditMant.NivelAceite">NivelAceite:</label>
        <input asp-for="EditMant.NivelAceite" class="form-control">
        <span class="text-danger" asp-validation-for="EditMant.NivelAceite"></span>
    </div>
    <div class="form-group">
        <label asp-for="EditMant.NivelLiquidoFrenos">NivelLiquidoFrenos:</label>
        <input asp-for="EditMant.NivelLiquidoFrenos" class="form-control">
        <span class="text-danger" asp-validation-for="EditMant.NivelLiquidoFrenos"></span>
    </div>
    <div class="form-group">
        <label asp-for="EditMant.NivelRefrigerante">NivelRefrigerante:</label>
        <input asp-for="EditMant.NivelRefrigerante" class="form-control">
        <span class="text-danger" asp-validation-for="EditMant.NivelRefrigerante"></span>
    </div>
    <div class="form-group">
        <label asp-for="EditMant.NivelLiquidoDireccion">NivelLiquidoDireccion:</label>
        <input asp-for="EditMant.NivelLiquidoDireccion" class="form-control">
        <span class="text-danger" asp-validation-for="EditMant.NivelLiquidoDireccion"></span>
    </div>
        <div class="form-group">
        <label asp-for="EditMant.FechaMantenimiento">FechaMantenimiento:</label>
        <input asp-for="EditMant.FechaMantenimiento" class="form-control">
        <span class="text-danger" asp-validation-for="EditMant.FechaMantenimiento"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Editar</button>
</form>
<a asp-page="./ListarMantenimiento" class="btn-default">Lista</a>
